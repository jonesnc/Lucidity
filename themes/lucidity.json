    "tokenColors": [
        {
            "scope": [
                "comment"
            ],
            "settings": {
                "foreground": "#76787a"
            }
        },
        {
            "scope": [
                "keyword.control",
                "storage.type",
                "storage.modifier.specifier",
                "variable.language.this",
                "constant.language.nullptr",
                "storage.modifier.inline",
                "keyword.other.typedef",
                "storage.modifier.static",
                "support.type.basic.gdscript",
                "meta.require",
            ],
            "settings": {
                "foreground": "#6baa81"
            }
        },
        {
            "scope": [
                "entity.name.type",
                "storage.modifier.sqf",
                "support.class",
                "entity.other.inherited-class.gdscript"
            ],
            "settings": {
                "foreground": "#6b91aa"
            }
        },
        {
            "scope": [
                "string"
            ],
            "settings": {
                "foreground": "#75755F"
            }
        },
        {
            "scope": [
                "constant.numeric",
                "constant.language.true",
                "constant.language.false",
                "constant.language.boolean",
                "constant.language.gdscript",
                "storage.type.number.python",
            ],
            "settings": {
                "foreground": "#aa9c6b"
            }
        },
        {
            "scope": [
                "entity.name.type.variant.gdscript",
                "meta.bracket.square.access",
                "keyword.operator"
            ],
            "settings": {
                "foreground": "#a1a18b"
            }
        }
    ],
    "semanticTokenColors": {
        "selfParameter": "#6baa81",
        "variable.defaultLibrary": "#6b91aa",
        "builtinConstant.readonly": "#aa9c6b",
        "module.decorator": "#6b91aa",
        "function.decorator": "#6b91aa"
    }
}
